{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@common/*": ["../common/*"],
    }
  },
  "include": [
    "../../types.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../common/**/*.tsx",
    "../common/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
